pipeline {
    agent {
        label 'java-maven'
    }

    environment {
        DOCKER_REGISTRY_URL = 'localhost:5000'
    }

    stages {
        stage('Build') {
            steps {
                dir('auth') {
                     sh '''
                         mvn clean package
                     '''
                }
            }
        }

        stage('Integration Tests') {
            steps {
                dir('auth') {
                    sh '''
                        mvn test
                    '''
                }
            }
        }

        stage('Build Image') {
            steps {
                dir('auth') {
                    sh '''
                        docker build -t ${DOCKER_REGISTRY_URL}/rbp-auth:1.0 .
                    '''
                }
            }
        }

        stage('Push Image') {
            steps {
                sh '''
                    docker push ${DOCKER_REGISTRY_URL}/rbp-auth:1.0
                '''
            }
        }
    }

    post {
        always  {
            dir('auth') {
                junit 'target/surefire-reports/**/*.xml'
            }
        }
    }
}